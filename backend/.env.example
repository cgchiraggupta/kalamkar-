# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE_MB=500
UPLOAD_DIR=./uploads

# AI Transcription API (Choose one)
# Option 1: OpenAI Whisper
OPENAI_API_KEY=your-openai-api-key

# Option 2: Google Speech-to-Text
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# AWS S3 (for production storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=kalakar-videos

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/kalakar
